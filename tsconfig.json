{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@actions/*": ["./src/actions/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@reducers/*": ["./src/reducers/*"],
      "@types/*": ["./src/types/*"],
      "@components/*": ["./src/components/*"],
      "@hoc/*": ["./src/hoc/*"],
      "@services/*": ["./src/services/*"]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "outDir": "./dist",
  },
  "include": [
    "src"
  ],
  "exclude": ["src/setupProxy.js", "node_modules", "dist"]
}
